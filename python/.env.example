# Provider System Configuration

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/providers
SQL_ECHO=false

# Security
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key-here

# Provider API Keys (Optional - can be added via API)
OPENAI_API_KEY=sk-...
OPENAI_ORG_ID=org-...
ANTHROPIC_API_KEY=sk-ant-...

# Service Configuration
PROVIDER_MAX_RETRIES=3
PROVIDER_RETRY_DELAY=1.0
PROVIDER_REQUEST_TIMEOUT=30

# Health Check Settings
HEALTH_CHECK_INTERVAL=300  # 5 minutes
HEALTH_CHECK_TIMEOUT=10

# Usage Tracking
USAGE_BATCH_SIZE=100
USAGE_RETENTION_DAYS=90

# Routing Configuration
ROUTING_CACHE_TTL=60  # 1 minute
ROUTING_FALLBACK_ENABLED=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # 1 minute